<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vibeosys.travelapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.vibeosys.travelapp.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:parentActivityName=".MainActivity"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.vibeosys.travelapp.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vibeosys.travelapp.ConformOTPActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.vibeosys.travelapp.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name="com.vibeosys.travelapp.AnswerQuestion"
            android:parentActivityName="com.vibeosys.travelapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vibeosys.travelapp.MainActivity" />
        </activity>
        <activity
            android:name="com.vibeosys.travelapp.QuestionsFromOthers"
            android:parentActivityName="com.vibeosys.travelapp.MainActivity"
            android:theme="@style/Theme.AppCompat.Dialog">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vibeosys.travelapp.MainActivity" />
        </activity>
        <activity
            android:name="com.vibeosys.travelapp.PhotosFromOthers"
            android:label="TravelApp"
            android:parentActivityName="com.vibeosys.travelapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vibeosys.travelapp.MainActivity" />
        </activity>
        <activity
            android:name="com.vibeosys.travelapp.ShowRouteList"
            android:label="@string/app_name"
            android:parentActivityName="com.vibeosys.travelapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vibeosys.travelapp.MainActivity" />
        </activity>
        <activity
            android:name="com.vibeosys.travelapp.ShowMyPhotos"
            android:label="@string/app_name"
            android:parentActivityName="com.vibeosys.travelapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vibeosys.travelapp.MainActivity" />
        </activity>
        <activity
            android:name=".ShowRoutesOnMap"
            android:parentActivityName="com.vibeosys.travelapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vibeosys.travelapp.MainActivity" />
        </activity>
        <activity android:name=".GridViewPhotos" />
        <activity
            android:name=".PreviewImage"
            android:theme="@android:style/Theme.Light" />
        <activity
            android:name=".QuestionSlidingView"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vibeosys.travelapp.MainActivity" />
        </activity>
        <activity
            android:name=".DestinationComments"

            >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.vibeosys.travelapp.MainActivity" />
</activity>
        <activity android:name=".UserLikes">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vibeosys.travelapp.MainActivity" />
        </activity>
    </application>

</manifest>
