<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

      <!-- Link to Facebook Login -->

    <Button android:id="@+id/btn_fbLogin"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#3b579d"
        android:text="Log in with facebook"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/fbbtn_logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_GPLogin"

        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/btn_fbLogin"
        android:layout_alignStart="@+id/btn_fbLogin"
        android:layout_marginBottom="38dp" />

    <Button android:id="@+id/btn_skip"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#3b579d"
        android:text="Skip Login"
        android:layout_marginTop="32dp"
        android:onClick="OnClickSkipLogin"
        android:layout_below="@+id/btn_fbLogin"
        android:layout_centerHorizontal="true" />

</RelativeLayout>