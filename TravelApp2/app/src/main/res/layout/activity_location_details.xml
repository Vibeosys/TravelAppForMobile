<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F9F9F9"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/dlg_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D32F2F"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/dlg_title"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14dp" />

            <ImageView
                android:layout_centerVertical="true"
                android:src="@drawable/add_comment"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/sendDestinatiomMessages"
                android:layout_height="wrap_content"

                />

        </RelativeLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/photos_row"
            style="@style/dlg_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!-- icon -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/cam"
                android:layout_marginRight="10dp"/>

            <!-- title -->
            <TextView
                android:id="@+id/photo_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
               />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/comments_row"
            style="@style/dlg_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userphoto"
            android:orientation="horizontal">

            <!-- icon -->
            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/comment" />

            <!-- title -->
            <TextView
                android:id="@+id/comments_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/dlg_row"
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rattings_row"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/ratings_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                 />

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_row"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/open_in_new" />

            <TextView
                android:id="@+id/details_label"
                android:text="Details"
                android:textColor="#B2E2FF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="12dp"
                />

        </LinearLayout>

    </LinearLayout>


    <ImageButton
        android:src="@drawable/camera_white"
        android:id="@+id/send_photos"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/shape"
        android:text="Save"
        android:textColor="#ffffff"
        />

    <View
        android:id="@+id/overlay"
        android:layout_above="@id/footer"
        android:background="#66FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></View>


</RelativeLayout>
